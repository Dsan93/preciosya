@model IEnumerable<preciosya.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PerNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerDni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerCorreo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerGenero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PerNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerDni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerCorreo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
