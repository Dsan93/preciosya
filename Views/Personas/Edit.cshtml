@model preciosya.Models.Persona

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PerId" />
            <div class="form-group">
                <label asp-for="PerNombre" class="control-label"></label>
                <input asp-for="PerNombre" class="form-control" />
                <span asp-validation-for="PerNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerApellido" class="control-label"></label>
                <input asp-for="PerApellido" class="form-control" />
                <span asp-validation-for="PerApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerDni" class="control-label"></label>
                <input asp-for="PerDni" class="form-control" />
                <span asp-validation-for="PerDni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerCorreo" class="control-label"></label>
                <input asp-for="PerCorreo" class="form-control" />
                <span asp-validation-for="PerCorreo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerGenero" class="control-label"></label>
                <input asp-for="PerGenero" class="form-control" />
                <span asp-validation-for="PerGenero" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TipoUsuario" /> @Html.DisplayNameFor(model => model.TipoUsuario)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
